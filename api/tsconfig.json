{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "index.ts",
    "auth/google.ts",
    "auth/test.ts",
    "lib/**/*.ts",
    "db/**/*.ts"
  ],
  "exclude": ["node_modules"]
}